<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!--  -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <title>Document</title>
  <style>
    #main{
      height: 700px;
    }
    form{
      height: 500px;
    }
  </style>
</head>

<body class="bg-black">
  <%-include('../partials/header')%>

    <div class=" mb-5  p-2" id="main">
      <form action="/updateData" method="post" class="bg-black border-info border w-50 m-auto p-4  rounded-3"  enctype="multipart/form-data">

        <caption class="text-center text-info">
          <h2 class="text-white">Udate your movie</h2>
        </caption>

        <label class="form-check-label mt-3 bg-black text-white">image</label>
        <input type="file" class="form-control bg-black text-white" name="image" value="<%=data.image%>">

        <label class="form-check-label mt-3  bg-black text-white">name</label>
        <input type="text" class="form-control  bg-black text-white" name="name" value="<%=data.name%>">


        <label class="form-check-label mt-3">discribtion</label>
        <input type="text" class="form-control bg-black text-white" name="discribtion" value="<%=data.discribtion%>">


        <label class="form-check-label mt-3 bg-black text-white">Genre</label>

        <select name="Genre" class="bg-black text-white" required>

            
            <option value="">Select movie Type</option>
            <%
            let Genre=["Fiction","Non-Fiction","fantasy","Mystery","romance","thriller","Science","biography","selfhelp"]
            Genre.map((val)=>{
               %>
               <option <% if(data.Genre==val){ %> selected <% } %> value="<%= val %>" ><%= val %></option>
                <%
            })
            %>


        </select>


        <label class="form-check-label mt-3  bg-black text-white">Rate</label>

        <select name="Rate"  class="bg-black txet-white" required >

      
          <option value="" class="bg-black text-white">Rate</option>
          <%
          let Rate=["⭐⭐⭐⭐⭐","⭐⭐⭐⭐","⭐⭐⭐","⭐⭐","⭐"]
          Rate.map((val)=>{
             %>
             <option <% if(data.Rate==val){ %> selected <% } %> value="<%= val %>" ><%= val %></option>
              <%
          })
          %>
          <!--  -->
         


        </select>

        <div> <input type="submit" value="submit" class="btn button text-white bg-info  mt-3">
        </div>
      </form>
    </div>
    <!-- footer -->
<%-include('../partials/footer')%>
</body>

</html>